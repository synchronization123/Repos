        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#mainpage3" data-page="MainPage3.html">Main Page 3</a>
        </li>
    </ul>

    <div class="tab-content">
        <!-- Main Page 1 -->
        <div class="tab-pane fade show active" id="mainpage1">
            <h4>Main Page 1</h4>
            <ul class="nav nav-pills mt-2">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#subpage1" data-page="SubPage1.html">Sub Page 1</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#subpage2" data-page="SubPage2.html">Sub Page 2</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#subpage3" data-page="SubPage3.html">Sub Page 3</a>
                </li>
            </ul>
            <div class="tab-content mt-3">
                <div class="tab-pane fade show active" id="subpage1">Loading...</div>
