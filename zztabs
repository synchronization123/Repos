<body>

    <div id="sidebar">
        <button id="toggle-btn"><i class="fas fa-bars"></i></button>
        <ul class="menu">
            <li><a href="dashboard.html"><i class="fas fa-tachometer-alt"></i> <span class="menu-text">Dashboard</span></a></li>

            <li class="submenu">
                <a href="#"><i class="fas fa-tools"></i> <span class="menu-text">Patches</span> <span class="toggle">+</span></a>
                <ul class="sub-menu">
                    <li><a href="patches-list.html"><i class="fas fa-list"></i> List</a></li>
                    <li><a href="patches-jira.html"><i class="fab fa-jira"></i> Jira</a></li>
                    <li><a href="patches-import.html"><i class="fas fa-file-import"></i> Import</a></li>
