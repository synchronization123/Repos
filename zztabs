<div class="container mt-4">
    <h2>Bootstrap Tabs with AJAX & CSRF</h2>

    <!-- Hidden CSRF Token -->
    <input type="hidden" id="csrf_token" name="csrfmiddlewaretoken" value="">

    <!-- Tabs -->
    <ul class="nav nav-tabs" id="mainTabs">
        <li class="nav-item">
            <a class="nav-link active" data-bs-toggle="tab" href="#mainpage1" data-page="MainPage1.html">Main Page 1</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" data-bs-toggle="tab" href="#mainpage2" data-page="MainPage2.html">Main Page 2</a>
