<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AJAX Tabs with CSRF</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        .tab { cursor: pointer; padding: 10px; display: inline-block; background: #ddd; margin: 5px; }
        .active { background: #bbb; }
        #contentDiv { border: 1px solid #ccc; padding: 20px; margin-top: 10px; }
    </style>
</head>
<body>

    <!-- CSRF Token Hidden Input -->
    <input type="hidden" id="csrf_token" name="csrfmiddlewaretoken" value="">

    <!-- Tabs -->
    <div>
        <span class="tab active" data-page="page1.html">Tab 1</span>
        <span class="tab" data-page="page2.html">Tab 2</span>
    </div>

    <!-- Content Div -->
    <div id="contentDiv">Loading...</div>

    <script>
        var csrfToken = '';

        // Fetch CSRF token
        $.get("https://dojo.com/api/key-v2", function(data) {
            csrfToken = data.token;
            $("#csrf_token").val(csrfToken);
        });

        function loadContent(page) {
            $.ajax({
                url: page,
                type: "GET",
                headers: { "X-CSRFToken": csrfToken },
                success: function(response) {
                    $("#contentDiv").html(response);
                },
                error: function() {
                    $("#contentDiv").html("<p>Error loading content.</p>");
                }
            });
        }

        // Load first tab content by default
        loadContent("page1.html");

        // Tab click event
        $(".tab").click(function() {
            $(".tab").removeClass("active");
            $(this).addClass("active");
            loadContent($(this).data("page"));
        });
    </script>

</body>
</html>