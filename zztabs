<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fetch API Tabs</title>
    <style>
        body { font-family: Arial, sans-serif; }
        .tabs { display: flex; cursor: pointer; background: #ddd; padding: 10px; }
        .tab { flex: 1; text-align: center; padding: 10px; background: #bbb; margin: 5px; border-radius: 5px; }
        .tab.active { background: #888; color: white; }
        .content { border: 1px solid #ccc; padding: 20px; height: 300px; overflow-y: auto; }
    </style>
</head>
<body>

    <div class="tabs">
        <div class="tab active" onclick="loadContent(0, 'https://example.com/page1.html')">Tab 1</div>
        <div class="tab" onclick="loadContent(1, 'https://example.com/page2.html')">Tab 2</div>
    </div>

    <div id="content" class="content">Loading...</div>

    <script>
        function loadContent(index, url) {
            document.getElementById('content').innerHTML = "Loading...";
            
            fetch(url)
                .then(response => response.text())
                .then(data => {
                    document.getElementById('content').innerHTML = data;
                })
                .catch(() => {
                    document.getElementById('content').innerHTML = "Failed to load content.";
                });

            document.querySelectorAll('.tab').forEach((tab, i) => {
                tab.classList.toggle('active', i === index);
            });
        }

        // Load the first tab content initially
        loadContent(0, 'https://example.com/page1.html');
    </script>

</body>
</html>