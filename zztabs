<!DOCTYPE html><html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bootstrap Tabs with AJAX</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function loadPage(url) {
            $.ajax({
                url: url,
                success: function(response) {
                    document.getElementById('content').innerHTML = response;
                    history.pushState(null, '', url);
                },
                error: function() {
                    document.getElementById('content').innerHTML = '<p>Failed to load content.</p>';
                }
            });
        }
    </script>
</head>
<body>
    <div class="container mt-3">
        <div class="btn-group" role="group">
            <button class="btn btn-primary" onclick="loadPage('https://example.com')">Example</button>
            <button class="btn btn-secondary" onclick="loadPage('https://www.google.com')">Google</button>
            <button class="btn btn-success" onclick="loadPage('https://www.wikipedia.org')">Wikipedia</button>
        </div>
        <div class="mt-3" id="content">
            <p>Select a tab to load content.</p>
        </div>
    </div>
</body>
</html>