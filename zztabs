<script>
    var csrfToken = '';

    // Fetch CSRF token from API
    $.get("https://dojo.com/api/key-v2", function(data) {
        csrfToken = data.token;
        $("#csrf_token").val(csrfToken);
        
        // Load default pages
        loadContent("MainPage1.html", "#mainpage1", true);
        loadContent("SubPage1.html?csrf=" + encodeURIComponent(csrfToken), "#subpage1", true);
    });

    function loadContent(page, target, isMainPage = false) {
        $.ajax({
            url: page,
            type: "GET",
            success: function(response) {
                $(target).html(response);
            },
            error: function() {
                $(target).html("<p>Error loading content.</p>");
            }
        });
    }

    // Load Main Pages
    $('#mainTabs a').on('click', function() {
        var page = $(this).data("page");
        var target = $(this).attr("href");
        loadContent(page, target, true);
    });

    // Load Sub Pages for Main Page 1
    $('#mainpage1 .nav-pills a').on('click', function() {
        var page = $(this).data("page");
        var target = $(this).attr("href");

        if (page === "SubPage1.html") {
            loadContent(page + "?csrf=" + encodeURIComponent(csrfToken), target);
        } else {
            loadContent(page, target);
        }
    });

    // Load Sub Pages for Main Page 3
    $('#mainpage3 .nav-pills a').on('click', function() {
        var page = $(this).data("page");
        var target = $(this).attr("href");

        if (page === "SubPage1.html") {
            loadContent(page + "?csrf=" + encodeURIComponent(csrfToken), target);
        } else {
            loadContent(page, target);
        }
    });
</script>

