<div id="content">Loading...</div>

<script>
    $(document).ready(function(){
        function getCSRFToken() {
            return new URLSearchParams(window.location.search).get("csrf_token") || "";
        }

        function loadContent(url) {
            $("#content").html("Loading...");
            
            let csrfToken = getCSRFToken();
            if (csrfToken) {
                url += (url.includes("?") ? "&" : "?") + "csrf_token=" + csrfToken;
            }

            $.ajax({
                url: url,
                success: function(data) {
                    $("#content").html(data);
                },
                error: function() {
                    $("#content").html("<p style='color: red;'>Failed to load content.</p>");
                }
            });
        }

        $(".tab").click(function() {
            $(".tab").removeClass("active");
            $(this).addClass("active");

            let url = $(this).data("url");
            loadContent(url);
        });

        // Load the first tab by default with CSRF token
        let defaultUrl = $(".tab.active").data("url");
        loadContent(defaultUrl);
    });
</script>

</body>
</html>